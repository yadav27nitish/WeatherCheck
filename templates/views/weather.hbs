<!DOCTYPE html>
<html lang="en">
<head>
    {{>headerLinks}}
    <title>weather</title>
</head>
<body>
    {{>navbar}}

    <div class="main_header">

        <div class="row">
            <div class="col-md-10 col-12 mx-auto">
                <div class="container-fluid  main_content">
                    <form class="temp_form ">
                        <input type="text" id="cityName" placeholder="Enter you city name.." autocomplete="off">
                        <br>
                        <input type="submit" value="search" id="submitBtn">
                        <p id="temp_err"></p>
                    </form>

                    <div class="tempInformation  ">
                        <div class="top_layer">
                            <p id="day">Tuesday</p>
                            <p id="today_date">13 oct</p>
                        </div>
                        <div class="main_layer">
                            <p id="city_name">Get output here </p>
                            <div class="middle_layer dataHide">
                                <p><span id="temp">00.0</span><sup>o</sup>C</p>
                                <p id="temp_status"></p>
                            </div>
                            <div class="buttom_layer dataHide">
                                <p><span id="min_temp">Min 00.0</span><sup>o</sup>C</p>
                                <p><span id="max_temp">Max 00.0</span><sup>o</sup>C</p>
                            </div>
                        </div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
    {{>footer}}
    <script src="js/main.js"></script>
</body>
</html>